[core]
    editor = vi
    excludesFile = ~/.gitignore

[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta

[color]
    ui = true
    decorate = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = cyan

[color "diff"]
    whitespace = red reverse
    meta = yellow bold
    frag = cyan bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[user]
    name = Jeremy Satterfield
    email = jsatt@jsatt.com
    signingkey = 040D99501ADBAD9E

[commit]
    gpgsign = true

[merge]
    tool = vimdiff

[alias]
    br = branch
    ci = commit
    di = diff
    st = status

    amend = commit --amend
    cia = commit --all
    dc = diff --cached
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    rollback = reset --soft HEAD~1
    unstage = reset HEAD --
    up = checkout -m
    force-push = push --force-with-lease

    out = !git fetch && git log FETCH_HEAD..
    in = !git fetch && git log ..FETCH_HEAD

    pr = "!f() { git fetch -fu $1 refs/pull/$2/head:pr/$2; git checkout pr/$2; } ; f"
    prc = "!git for-each-ref refs/heads/pr/* --format='%(refname)' | while read ref ; do branch=${ref#refs/heads/} ; git branch -D $branch ; done"
    delete-merged-branches = "!f() { git checkout --quiet ${1:-master} && git branch --merged | grep --invert-match '\\*' | xargs -n 1 git branch --delete; git checkout --quiet @{-1}; }; f"

[push]
    default = simple

[help]
    autocorrect = 15
[diff]
    compactionHeuristic = true
    colorMoved = default

[interactive]
    diffFilter = delta --color-only

[delta]
    plus-style = "syntax #003300"
    minus-style = "syntax #340000"
    syntax-theme = Monokai Extended
    navigate = true
    line-numbers = True
    side-by-side = True
    inspect-raw-lines = false

[includeIf "gitdir:~/dev/pton/"]
    path = ~/.pton.gitconfig
